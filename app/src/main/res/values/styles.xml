<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="NumberButton">
        <item name="android:background">@drawable/number_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">85dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:onClick">numberButtonClick</item>
    </style>
    <style name="OtherButton" parent="NumberButton">
        <item name="android:background">@drawable/other_button_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="NumberButtonLand" parent="NumberButton">
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">97dp</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="OtherButtonLand" parent="OtherButton">
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">97dp</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="ScienceButton" parent="NumberButtonLand">
        <item name="android:background">@drawable/science_button_background</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:onClick">scienceButtonClick</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">22dp</item>
    </style>
    <style name="TextViewStyleLand" parent="TextViewStyle">
        <item name="android:textSize">17dp</item>
    </style>
</resources>
